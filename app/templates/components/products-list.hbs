{{#if editing}}
<article>
    <p>Id: {{input value=product.id}}</p>
    <p>Name: {{input value=product.name}}</p>
    <p>Ean: {{input value=product.EAN}}</p>
    <p>Price: {{input value=product.price}}</p>
    <button {{action 'cancle'}}>Cancle</button>
    <button {{action 'save'}}>Save</button>
</article>
{{else}}
<article>
    <p>Id: {{product.id}}</p>
    <p>Name: {{product.name}}</p>
    <p>Ean: {{product.EAN}}</p>
    <p>Price: {{product.price}}</p>
    <button {{action 'edit'}}>Edit</button>
</article>
{{/if}}