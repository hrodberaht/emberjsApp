<div>
    <form>
        Email:
        <p>{{input type="email" value=emailAddress placeholder="Please enter your email."}}</p>
        Message:
        <p>{{textarea rows="4" cols="50" value=message placeholder="Please enter your message."}}</p>
        <button type="submit" disabled={{isDisabled}} {{action 'sendMessage'}}>Send</button>
    </form>
</div>
{{#if responseMessage}}
<div>
    <p>
        {{responseMessage}}
    </p>
</div>
{{/if}}